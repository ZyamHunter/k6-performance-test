{
  "scenarios": {
    "load_test_optimized": {
      "executor": "ramping-vus",
      "stages": [
        { "duration": "2m", "target": 20 },
        { "duration": "3m", "target": 60 },
        { "duration": "5m", "target": 120 },
        { "duration": "8m", "target": 150 },
        { "duration": "5m", "target": 150 },
        { "duration": "2m", "target": 0 }
      ],
      "gracefulRampDown": "1m",
      "env": {
        "TEST_TYPE": "load",
        "THINK_TIME_LOAD": "0.2"
      }
    }
  },
  "thresholds": {
    "http_req_duration": ["p(90)<2000", "p(95)<3000"],
    "http_req_failed": ["rate<0.05"],
    "purchase_success": ["rate>0.95"],
    "errors": ["rate<0.05"],
    "http_reqs": ["rate>240"]
  },
  "summaryTrendStats": ["avg", "min", "med", "max", "p(90)", "p(95)", "p(99)", "p(99.99)"],
  "noConnectionReuse": false,
  "userAgent": "K6-BlazeDemoOptimized/1.0",
  "ext": {
    "loadimpact": {
      "name": "BlazDemo - OPTIMIZED Load Test (250+ RPS Target)",
      "note": "Teste otimizado para atingir 250+ RPS com think time reduzido"
    }
  }
}